{
    "$schema": "http://json.schemastore.org/template",
    "author": "MudBlazor Team",
    "classifications": [
      "Blazor",
      "Web",
      "Wasm"
    ],
    "name": "Obaki Templates",
    "description": "My personal templates reflecting my preferred directory structure and settings. Framework: LTS(net6.0)",
    "identity": "Obaki.Templates",
    "groupIdentity": "Obaki.Templates",
    "shortName": "obaki",
    "defaultName": "ObakiTemplates",
    "tags": {
      "language": "C#",
      "type": "project"
    },
    "sourceName": "Obaki.Template",
    "preferNameDirectory": false,
    "symbols": {
      "Type": {
        "type": "parameter",
        "datatype": "choice",
        "defaultValue": "Webapp-Wasm",
        "choices": [
          {
            "choice": "Webapp-Wasm",
            "description": "Blazor WebAssembly"
          }
        ]
      },
      "IsWebAppWasm": {
        "type": "computed",
        "value": "(Type == \"Webapp-Wasm\""
      },
      "skipRestore": {
        "type": "parameter",
        "datatype": "bool",
        "description": "If specified, skips the automatic restore of the project on create.",
        "defaultValue": "false"
      }
    },
    "primaryOutputs": [
      {
        "path": "./"
      }
    ],
    "sources": [    
      {
        "condition": "(IsWebAppWasm)",
        "source": "./.template.base/webapp-wasm",
        "include": "*.sln",
        "target": "./"
      }
    ],
    "SpecialCustomOperations": {
      "**/*.razor": {
        "operations": [
          {
            "type": "conditional",
            "configuration": {
              "if": [
                "//#if"
              ],
              "else": [
                "//#else"
              ],
              "elseif": [
                "//#elseif"
              ],
              "endif": [
                "//#endif"
              ],
              "trim": true,
              "wholeLine": true,
              "evaluator": "C++"
            }
          }
        ]
      },
      "**/*.html": {
        "operations": [
          {
            "type": "conditional",
            "configuration": {
              "if": [
                "//#if"
              ],
              "else": [
                "//#else"
              ],
              "elseif": [
                "//#elseif"
              ],
              "endif": [
                "//#endif"
              ],
              "trim": true,
              "wholeLine": true,
              "evaluator": "C++"
            }
          }
        ]
      }
    },
    "postActions": [
      {
        "condition": "(!skipRestore)",
        "description": "Restore NuGet packages required by this project.",
        "manualInstructions": [
          {
            "text": "Run 'dotnet restore'"
          }
        ],
        "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
        "continueOnError": true
      }
    ]
  }